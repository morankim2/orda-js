{
  "compilerOptions": {    
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "noEmit": false,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [    
    "node_modules"
  ]
}