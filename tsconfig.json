{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "*": [
        "src/*"
      ],
      "test/*": [
        "test/*"
      ]
    }
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "dist",
    "example",
    "node_modules"
  ]
}