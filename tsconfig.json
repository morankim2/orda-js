 {
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@ooo/*": [
        "src/*"
      ],
      "@test/*": [
        "test/*"
      ]
    }
  },
  "include": [
    "./src/protobuf/ortoo_pb.js",
    "./src/**/*",
    "./test/**/*"
  ],
  "exclude": [
    "example",
    "node_modules"
  ],
  "typedocOptions": {
    "entryPoints": ["src/ortoo.ts"],
    "name": "Ortoo-js",
    "theme": "node_modules/eledoc/bin/default/",
    "out": "docs"
  }
}