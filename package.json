{
  "name": "@orda-io/orda",
  "version": "0.1.24",
  "description": "Orda-js: A typescript/javascript library for orda project. CRDT-based data synchronization supporting document database.",
  "scripts": {
    "dev": "npx webpack serve --config=./config/webpack.dev.js --stats-all --profile --bail --progress",
    "test": "npx karma start",
    "test:mocha": "npx mocha --config ./config/mocharc.json -ui bdd ./test/**/*",
    "coverage": "npx karma start --coverage",
    "clean": "rimraf dist coverage",
    "clean:dist": "rimraf dist",
    "clean:coverage": "rimraf coverage",
    "eslint:fix": "eslint --ext .tsx,.ts --fix ./src ./test",
    "prettier": "prettier --config .prettierrc.json --write ./src/**/*.{json,ts,tsx}",
    "gen:openapi": "npx swagger-typescript-api -p https://raw.githubusercontent.com/orda-io/orda/master/resources/orda.grpc.swagger.json -o ./src/generated -n openapi.ts",
    "gen:proto-enum": " curl -s https://raw.githubusercontent.com/orda-io/orda/master/proto/orda.enum.proto | npx pbjs /dev/fd/0 --ts ./src/generated/proto.enum.ts && sed 's/export const enum/export enum/g' ./src/generated/proto.enum.ts",
    "build:dev": "webpack --config=./config/webpack.dev.js --stats-all --profile --bail",
    "build:prod": "npm run clean && webpack --config=./config/webpack.prod.js --stats-all --profile --bail",
    "prepublish": "npm run build:prod && npm version patch -m \"ðŸ§©tag: npm publish tag %s\"",
    "pushTags": "git push --tags"
  },
  "main": "dist/orda.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orda-io/orda-js.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "keywords": [
    "json",
    "synchronization",
    "replication",
    "collaboration",
    "javascript-library",
    "typescript-library",
    "document-database",
    "rga",
    "datatypes",
    "eventual-consistency",
    "crdts",
    "crdt-implementations",
    "orda",
    "conflict-free-replicated-datatype"
  ],
  "author": "Orda Team",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/orda-io/orda-js/issues"
  },
  "homepage": "https://github.com/orda-io/orda-js#readme",
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/crypto-js": "^4.1.1",
    "@types/mocha": "^9.1.1",
    "@types/mqtt": "^2.5.0",
    "@types/paho-mqtt": "^1.0.6",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "chai": "^4.3.6",
    "crypto-browserify": "^3.12.0",
    "crypto-js": "^4.1.1",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "karma": "^6.3.19",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sinon": "^1.0.5",
    "karma-webpack": "^5.0.0",
    "mocha": "^9.2.2",
    "pbjs": "^0.0.14",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "swagger-typescript-api": "^9.3.1",
    "terser-webpack-plugin": "^5.3.1",
    "ts-loader": "^9.2.9",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "ttypescript": "^1.5.13",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1"
  },
  "dependencies": {
    "@orda-io/orda-integer": "^0.1.13",
    "@orda-io/orda-logger": "^0.1.15",
    "async-mutex": "^0.3.2",
    "cross-fetch": "^3.1.5",
    "mqtt": "^4.3.7",
    "nanoid": "^3.3.3",
    "url": "^0.11.0",
    "ws": "^7.5.7"
  }
}
