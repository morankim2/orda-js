{
  "name": "ortoo",
  "version": "0.0.1",
  "description": "Ortoo Javascript SDK",
  "scripts": {
    "dev": "webpack-dev-server --config=./config/webpack.dev.js",
    "test": "karma start",
    "coverage": "karma start --coverage",
    "clean:dist": "rimraf dist",
    "clean:coverage": "rimraf coverage",
    "clean": "rimraf dist coverage",
    "build": "npm run clean && webpack --config=./config/webpack.dev.js",
    "build:prod": "npm run clean && webpack --config=./config/webpack.prod.js  --progress --profile --bail",
    "eslint:fix": "eslint --ext .tsx,.ts --fix ./src",
    "prettier": "prettier --config ./.prettierrc --write ./src/**/*.{json,ts,tsx}",
    "gen-protocols": "protoc -I=./src/protocols/protobuf ortoo.proto --js_out=import_style=commonjs,binary:./src/protocols/protobuf --grpc-web_out=import_style=commonjs+dts,mode=grpcweb:./src/protocols/protobuf"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/knowhunger/ortoo-js.git"
  },
  "author": "Ortoo Team",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/knowhunger/ortoo-js/issues"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "test/**/*.test.ts",
      "test/**/*.js"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "homepage": "https://github.com/knowhunger/ortoo-js#readme",
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@types/chai": "^4.2.14",
    "@types/google-protobuf": "^3.7.4",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.10",
    "@types/paho-mqtt": "^1.0.4",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "babel-loader": "^8.2.1",
    "chai": "^4.2.0",
    "coverage-istanbul-loader": "^3.0.5",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jsdoc": "^3.6.6",
    "karma": "^5.2.3",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-requirejs": "^1.1.0",
    "karma-sinon": "^1.0.5",
    "karma-webpack": "^4.0.2",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.2.0",
    "requirejs": "^2.3.6",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.1",
    "ts-loader": "^8.0.11",
    "ts-mocha": "^8.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.2",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.4.1"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "google-protobuf": "^3.14.0",
    "grpc-web": "^1.2.1",
    "loglevel": "^1.7.1",
    "loglevel-plugin-prefix": "^0.8.4",
    "paho-mqtt": "^1.1.0",
    "uuid": "^8.3.1"
  }
}
